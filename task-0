#include "main.h"
#include <unistd.h>
#include <stdlib.h>
#include <stdarg.h>

int _printf(const char *format, ...) {
    va_list args;
    int count = 0;
    va_start(args, format);
    for (int i = 0; format[i] != '\0'; i++) {
        if (format[i] == '%') {
            i++;
            switch (format[i]) {
                case 'c': {
                    char c = va_arg(args, int);
                    write(1, &c, 1);
                    count++;
                    break;
                }
                case 's': {
                    char *s = va_arg(args, char *);
                    int len = strlen(s);
                    write(1, s, len);
                    count += len;
                    break;
                }
                case '%': {
                    char percent = '%';
                    write(1, &percent, 1);
                    count++;
                    break;
                }
                default: {
                    char unknown = format[i];
                    write(1, &unknown, 1);
                    count++;
                    break;
                }
            }
        } else {
            char c = format[i];
            write(1, &c, 1);
            count++;
        }
    }
    va_end(args);
    return count;
}
